{
  "name": "nutrition-platform-e2e-tests",
  "version": "1.0.0",
  "description": "Comprehensive end-to-end integration tests for Nutrition Platform",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:ci": "playwright test --reporter=html,junit",
    "test:mobile": "playwright test --project=mobile",
    "test:desktop": "playwright test --project=desktop",
    "test:tablet": "playwright test --project=tablet",
    "setup": "playwright install",
    "clean": "rm -rf test-results && rm -rf playwright-report",
    "lint": "eslint tests/**/*.{js,ts}",
    "format": "prettier --write tests/**/*.{js,ts}"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "faker": "^5.5.3",
    "moment": "^2.29.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
