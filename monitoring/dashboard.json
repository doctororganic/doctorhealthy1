{
  "dashboard": {
    "id": null,
    "title": "Nutrition Platform - Complete Monitoring",
    "tags": ["nutrition", "monitoring", "production"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(nutrition_http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(nutrition_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "singlestat",
        "targets": [
          {
            "expr": "rate(nutrition_errors_total[5m])",
            "legendFormat": "Errors/min"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "nutrition_memory_usage_bytes",
            "legendFormat": "{{type}}"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 8}
      },
      {
        "id": 5,
        "title": "Nutrition Analysis Success Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(nutrition_analysis_total[5m])",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "System Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{container=\"nutrition-platform-monitored\"}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}