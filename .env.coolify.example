# NUTRITION PLATFORM - PRODUCTION ENVIRONMENT FOR COOLIFY

NODE_ENV=production
APP_ENV=production
DOMAIN=your-domain.com

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=nutrition_db
DB_USER=nutrition_user
DB_PASSWORD=GENERATE_SECURE_PASSWORD_HERE
DATABASE_URL=postgresql://nutrition_user:PASSWORD@postgres:5432/nutrition_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=GENERATE_SECURE_PASSWORD_HERE
REDIS_URL=redis://default:PASSWORD@redis:6379

# JWT
JWT_SECRET=GENERATE_JWT_SECRET_MIN_32_CHARS_HERE
JWT_REFRESH_SECRET=GENERATE_REFRESH_SECRET_MIN_32_CHARS_HERE
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# Server
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# CORS
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=GENERATE_SESSION_SECRET_HERE

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=900000

# Email (optional)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=465
SMTP_USER=your_email@mailtrap.io
SMTP_PASS=your_password

# Monitoring
SENTRY_DSN=your_sentry_url_here

# Generate secure values:
# openssl rand -base64 32
