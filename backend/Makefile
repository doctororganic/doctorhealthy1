.PHONY: help build run test clean migrate setup dev watch

# Default target
help:
	@echo "Available commands:"
	@echo "  make setup     - Initial setup (deps, migrations, build)"
	@echo "  make build     - Build the application"
	@echo "  make run       - Run the application"
	@echo "  make dev       - Run in development mode with auto-reload"
	@echo "  make test      - Run all tests"
	@echo "  make migrate   - Run database migrations"
	@echo "  make clean     - Clean build artifacts"
	@echo "  make lint      - Run linter"
	@echo "  make fmt       - Format code"
	@echo "  make docker    - Build Docker image"
	@echo "  make test-api  - Test API endpoints"

# Setup everything
setup:
	@echo "üöÄ Setting up..."
	go mod download
	go mod tidy
	chmod +x run_migrations.sh
	./run_migrations.sh
	go build -o bin/nutrition-platform ./main.go
	@echo "‚úÖ Setup complete!"

# Build
build:
	@echo "üî® Building..."
	go build -o bin/nutrition-platform ./main.go
	@echo "‚úÖ Build complete!"

# Run
run:
	@echo "‚ñ∂Ô∏è  Starting server..."
	go run main.go

# Development mode with auto-reload (requires air: go install github.com/cosmtrek/air@latest)
dev:
	@if command -v air > /dev/null; then \
		echo "üîÑ Starting in dev mode with auto-reload..."; \
		air; \
	else \
		echo "‚ö†Ô∏è  Air not installed. Install with: go install github.com/cosmtrek/air@latest"; \
		echo "‚ñ∂Ô∏è  Running normally..."; \
		go run main.go; \
	fi

# Run tests
test:
	@echo "üß™ Running tests..."
	go test -v ./...

# Run tests with coverage
test-coverage:
	@echo "üß™ Running tests with coverage..."
	go test -v -coverprofile=coverage.out ./...
	go tool cover -html=coverage.out -o coverage.html
	@echo "‚úÖ Coverage report: coverage.html"

# Migrate database
migrate:
	@echo "üóÑÔ∏è  Running migrations..."
	chmod +x run_migrations.sh
	./run_migrations.sh

# Clean build artifacts
clean:
	@echo "üßπ Cleaning..."
	rm -rf bin/
	rm -f coverage.out coverage.html
	go clean
	@echo "‚úÖ Clean complete!"

# Format code
fmt:
	@echo "üìù Formatting code..."
	go fmt ./...
	@echo "‚úÖ Formatting complete!"

# Lint code
lint:
	@echo "üîç Linting..."
	@if command -v golangci-lint > /dev/null; then \
		golangci-lint run; \
	else \
		echo "‚ö†Ô∏è  golangci-lint not installed. Install with: go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest"; \
		go vet ./...; \
	fi

# Build Docker image
docker:
	@echo "üê≥ Building Docker image..."
	docker build -t nutrition-platform:latest .
	@echo "‚úÖ Docker image built!"

# Kill processes on port 8080
kill-port:
	@echo "üõë Killing processes on port 8080..."
	@chmod +x scripts/kill-port.sh
	@./scripts/kill-port.sh

# Start server with port cleanup
start-clean: kill-port
	@echo "üöÄ Starting server..."
	@go run main.go

# Build and start with port cleanup
run-clean: kill-port build
	@echo "üöÄ Running server..."
	@./bin/nutrition-platform

# Test API endpoints (requires server to be running)
test-api:
	@echo "üß™ Testing API endpoints..."
	@chmod +x scripts/test-api.sh
	@./scripts/test-api.sh

# Test public routes (requires server to be running)
test-public-routes:
	@echo "üß™ Testing public routes..."
	@chmod +x scripts/test-public-routes.sh
	@./scripts/test-public-routes.sh

# Generate API documentation
docs:
	@echo "üìö Generating API docs..."
	@if command -v swag > /dev/null; then \
		swag init; \
	else \
		echo "‚ö†Ô∏è  swag not installed. Install with: go install github.com/swaggo/swag/cmd/swag@latest"; \
	fi