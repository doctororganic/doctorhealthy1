{
  "name": "nutrition-platform",
  "type": "application",
  "build_pack": "dockerfile",
  "port": 8080,
  "health_check": {
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "environment": {
    "PORT": "8080",
    "ENVIRONMENT": "production"
  },
  "services": {
    "postgres": {
      "image": "postgres:15-alpine",
      "environment": {
        "POSTGRES_DB": "nutrition_platform",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "CHANGE_ME"
      }
    },
    "redis": {
      "image": "redis:7-alpine"
    }
  }
}
